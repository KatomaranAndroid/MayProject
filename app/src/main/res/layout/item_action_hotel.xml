<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="2dp"
            android:layout_weight="0.10"
            android:clickable="true"
            android:elevation="2dp"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:visibility="visible"
            android:id="@+id/tv_throw_times"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_throw_location_name"
            android:fontFamily="@string/font_family_medium"
            android:text="â‚¹2000"
            android:textColor="@color/medium_green_900"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="0.2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="2dp"
            android:layout_weight="0.05"
            android:background="@drawable/shape_btn_hollow_black"
            android:elevation="2dp"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:text="Book Now"
            android:textColor="@color/app_dark_100"
            android:textSize="10sp" />

    </LinearLayout>
</LinearLayout>